<div class="breadcrumbs">
  <div class="container-fluid">
    <ol class="breadcrumb">
      <li><%= link_to "Admin", admin_path %></li>
      <li class="active">Assignments</li>
    </ol>
  </div>
</div>

<div class="section">
  <div class="container-fluid">
    <h2>Assignments</h2>
     
    <p>
      <%= link_to 'New Assignment', new_admin_assignment_path, { class: "btn btn-default" } %>
    </p>

    <table class="table">
      <tr>
        <th>Title</th>
        <th>URL</th>
        <th>Files</th>
        <th>Actions</th>
      </tr>
     
      <% @assignments.each do |assignment| %>
        <tr>
          <td><%= assignment.title %></td>
          <td><%= link_to assignment.url, assignment.url, target: "_blank" %></td>
          <td><%= link_to assignment.file.url, assignment.file.url, target: "_blank" %></td>
          <td><%= link_to 'Show', admin_assignment_path(assignment) %> | 
              <%= link_to 'Edit', edit_admin_assignment_path(assignment) %> | 
              <%= link_to 'Destroy', admin_assignment_path(assignment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>